{
  "extends": [
    "config:base",
    ":disableRateLimiting",
    "github>whitesource/merge-confidence:beta"
  ],
  "kubernetes": {
    "ignorePaths": [
      "archived"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "ghcr.io/k8s-at-home/plex",
        "ghcr.io/k8s-at-home/radarr",
        "ghcr.io/k8s-at-home/sonarr"
      ]
    }
  ]
}
